    "test:playwright:ui": "npx playwright test --ui",
    "test:playwright:debug": "npx playwright test --debug",
    "test:playwright:trace": "npx playwright test --trace=on",
    "test:playwright:report": "npx playwright show-report",
    "test:playwright:codegen": "npx playwright codegen",
    "test:playwright:ui-workers2": "npx playwright test --ui --workers=2",
    "test:playwright:install": "npx playwright install",
    "test:playwright:install:chromium": "npx playwright install chromium",
    "test:playwright:install:firefox": "npx playwright install firefox",
    "test:playwright:install:webkit": "npx playwright install webkit",
    "test:bdd:ui": "npx bddgen & npx playwright test --ui",
    
    "report": "npx http-server ./cucumber-report -c-1 -a localhost -o index.html",
    "test:playwright:allure": "npx playwright test",
    "report:allure:generate": "allure generate --clean allure-results -o allure-report",
    "report:allure:open": "allure open allure-report",
    "report:allure:serve": "allure serve allure-results"

    
